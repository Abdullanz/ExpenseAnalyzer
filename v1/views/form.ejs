<%- include("partials/header") %>
    <!-- Form Page -->

    <div class="container content">

        <h1> تعبئة البيانات</h1>

        <form action="/form" method="POST">
            <div class="form-group">
                <label class="label-align" for="salary">الدخل الشهري</label>
                <input type="number" class="form-control mx-sm-3" name="salary" placeholder="الدخل" required>
            </div>

            <div class="form-group" style="margin-top: 2rem;">
                <label class="label-align" for="savings">المدخرات الشهرية</label>
                <input type="number" class="form-control mx-sm-3" name="savings" placeholder="المدخرات" required>
            </div>

            <div class="form-group" style="margin-top: 2rem;">
                <label class="label-align" for="savings">المصروفات الشهرية</label>
                <input type="number" class="form-control mx-lg-3" name="spendings" placeholder="المصروفات" required>
            </div>

            <div class="form-group" style="margin-top: 2rem;">
                <label class="label-align" for="savings">الديون</label>
                <input type="number" class="form-control mx-sm-3" name="debt" placeholder="الديون" required>
            </div>
